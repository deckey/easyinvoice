<html t:type="layout" 
      title="EasyInvoice : Add invoice" 
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">
   
    <body>
        <t:header/>
        <t:mainmenu/>
        <div class="row border_btm">
            <div class="col-xs-6">
                <h4> New invoice</h4>
            </div>
            <div class="col-xs-6">
                <h4 class='text-right'> Preview icon</h4>
            </div>
        </div>
        
        <div class="row frame">
            <form t:type="form" id="addInvoiceForm" t:id="addInvoiceForm">
                <div class="row ">
                    <div class="col-xs-6 col-sm-3 form-group">
                        <label >* Select client</label>
                        <t:select id="selectClientField" model="clients" t:value="client" class="form-control"/>
                    </div>
                    <div class="col-xs-6 col-sm-2 col-sm-offset-1 form-group">
                        <label >* Invoice # </label>
                        <t:textfield t:value="invoiceNumber" type="text" class="form-control"/>
                    </div> 
                    <div class="col-xs-6  col-sm-2 form-group">
                        <label >* Issue date</label>
                        <t:datefield  t:value="issueDate" id="issueDateField" class="form-control"/>
                    </div>
                    <div class="col-xs-6 col-sm-2 form-group">
                        <label >* Due in</label>
                        <t:datefield  t:value="dueDate" id="dueDateField" class="form-control"/>
                    </div> 
                    <div class="col-xs-6 col-sm-2 form-group">
                        <label >Currency</label>
                        <t:select model="currencies" t:id="currency" value="currency" class="form-control" />
                    </div> 
                </div>
                <div class="row ">
                    <!--SERVICE ENTRY-->
                    <div class="form-group col-sm-6">
                        <label for="serviceDescription">* Invoice description:</label>
                        <input t:type="textfield" t:id="serviceDescription" value="serviceDescription"/>
                    </div> 
                    <div class="form-group col-sm-2">
                        <label for="addInvoiceBtn" class="invisible">spacer</label>
                        <t:eventlink t:event="addInvoice" t:id="addInvoiceBtn" class="form-control btn btn-default">Add invoice</t:eventlink>
                    </div>
                </div>
            </form>
                   
            <!--SERVICE LIST-->
            <div class="row">
                <t:grid source="invoiceServices"/>
            </div>
            
        </div>
    </body>
</html>

