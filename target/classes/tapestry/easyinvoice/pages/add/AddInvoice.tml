<html t:type="layout" 
      title="EasyInvoice : Add invoice" 
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">
   
    <body>
        <t:header/>
        <t:mainmenu/>
        <div class="row border_btm">
            <div class="col-xs-10">
                <h4> New invoice</h4>
            </div>
            <div class="col-xs-2 pull-right">
                <h4> Preview icon</h4>
            </div>
        </div>
        
        <div class="row blue frame">
            <t:form t:id="addInvoiceForm">
                <div class="col-sm-3">
                    <label >Select client</label>
                    <t:select model="clients" t:value="client"/>
                </div>
                <div class="col-sm-2">
                    <label >Invoice # <t:eventlink>
                            <img src="${context:images/icons/refresh.png}"/>
                        </t:eventlink>
                    </label>
                    <t:textfield t:value="invoiceNumber" />
                </div>
                
                <div class="col-sm-2">
                    <label >Issue date</label>
                    <t:datefield t:value="issueDate"/>
                </div>
                <div class="col-sm-2">
                    <label >Due date</label>
                    <t:select model="dueDates" value="dueDate"/>
                </div>
                <div class="col-sm-2">
                    <label >Currency</label>
                    <t:select model="currencies" value="currency"/>
                </div>
            </t:form>
        </div>
    </body>
</html>

