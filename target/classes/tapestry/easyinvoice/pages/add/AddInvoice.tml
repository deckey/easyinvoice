<html t:type="layout" 
      title="EasyInvoice : Add invoice" 
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">
   
    <body>
        <t:header/>
        <t:mainmenu/>
        <div class="row border_btm">
            <div class="col-xs-6">
                <h4> New invoice</h4>
            </div>
            <div class="col-xs-6">
                <h4 class='text-right'> Preview icon</h4>
            </div>
        </div>
        
        <div class="row frame">
            <form t:type="form" t:id="addInvoiceForm" >
                <t:select t:model="clients" t:value="client"/>
                <t:textfield t:id="invoiceNumber" t:value="invoiceNumber"/>
                <t:textfield t:id="invoiceDescription" t:value="invoiceDescription"/>
                <t:datefield t:id="issueDate" t:value="issueDate"/>
                <t:datefield t:id="dueDate" t:value="dueDate"/>
                <t:select t:model="currencies" t:value="currency"/>
                <br/>
               
                <t:submit t:id="addInvoiceBtn"/>
            </form>
        </div> 
        <div class="row frame">
            <t:form t:id="addServiceForm">
                 Services
                <t:textfield t:id="serviceDescription" t:value="serviceDescription"/>
                <t:textfield t:id="serviceAmount" t:value="serviceAmount"/>
                <t:submit submitValue="Add service"/>
                <br/>
            </t:form>
        </div>
        
        
        <div class="row">
            <t:eventlink t:event="deleteServices">Clear</t:eventlink>
            <br/>
            <t:grid source="invoice.getServices()" exclude="serviceId" />
        </div>
        
        
        <div class="row">
            <h5>Invoice summary</h5>
            <t:beandisplay t:object="invoice"/>
