<html t:type="layout" 
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
    
    <t:content>
        <div class="row border_btm " id="header-bar">
            <div class="col-xs-6">
                <!--LOGO-->
                <t:eventlink t:event="EnterAdminArea">
                    <img class="img-responsive" id="logo-small" src="${context:images/easyinvoice_logo_small.png}"/>
                </t:eventlink>
            </div>
            <div class="col-xs-6 ">
                <div class="row spacer"/>
                <div class="row">
                    <t:eventlink t:event="logout" class="btn btn-info btn-xs  pull-right">Logout</t:eventlink>
                </div>
                <div class="row">
                    <h6 class=" text-right">Welcome back, <strong>${loggedUser}</strong></h6>
                </div>
            </div>
        </div>
    </t:content>
</html>
